# Set default content types for common static files
# JavaScript files
/assets/*.js
  Content-Type: application/javascript
  Content-Encoding: br
  Cache-Control: public, max-age=31536000

# CSS files
/assets/*.css
  Content-Type: text/css
  Content-Encoding: br
  Cache-Control: public, max-age=31536000

# Favicon
/favicon.ico
  Content-Type: image/x-icon
  Cache-Control: public, max-age=31536000

# Fonts
/assets/*.woff
  Content-Type: font/woff
  Content-Encoding: br
  Cache-Control: public, max-age=31536000

/assets/*.woff2
  Content-Type: font/woff2
  Content-Encoding: br
  Cache-Control: public, max-age=31536000

/assets/*.ttf
  Content-Type: font/ttf
  Content-Encoding: br
  Cache-Control: public, max-age=31536000


# Fallback for other static assets (revalidate) - might inherit Cloudflare default
#/static/*
#  Cache-Control: public, max-age=0, must-revalidate 
