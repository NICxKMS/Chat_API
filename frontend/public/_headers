# Set default content types for common static files
/static/js/*
  Content-Encoding: br
  Content-Type: application/javascript
  Cache-Control: public, max-age=31536000, immutable
/static/css/*
  Content-Encoding: br
  Content-Type: text/css
  Cache-Control: public, max-age=31536000, immutable
/favicon.ico
  Content-Type: image/x-icon
  Cache-Control: public, max-age=31536000, immutable
/static/media/*
  Content-Encoding: br
  Cache-Control: public, max-age=31536000, immutable
