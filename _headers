# Set default content types for common static files
/static/js/*
  Content-Encoding: br
  Content-Type: application/javascript
  Cache-Control: public, max-age=31536000, immutable
/static/css/*
  Content-Encoding: br
  Content-Type: text/css
  Cache-Control: public, max-age=31536000, immutable
/favicon.ico
  Content-Type: image/x-icon
  Cache-Control: public, max-age=31536000, immutable
/static/media/*.woff
  Content-Type: font/woff
  Content-Encoding: br
    Cache-Control: public, max-age=31536000, immutable

/static/media/*.woff2
  Content-Type: font/woff2
  Content-Encoding: br
    Cache-Control: public, max-age=31536000, immutable

/static/media/*.ttf
  Content-Type: font/ttf
  Content-Encoding: br
    Cache-Control: public, max-age=31536000, immutable

# Fallback for other static assets (revalidate) - might inherit Cloudflare default
#/static/*
#  Cache-Control: public, max-age=0, must-revalidate 
